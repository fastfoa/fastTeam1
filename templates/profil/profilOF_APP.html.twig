<script>
    function showList()
    {
        $("#listMa, #maitre, #validation").removeClass("invisible");
    }

    function addMa(idApp)
    {
        var valueI = $('#listMa').val();
        var idMa = $('#maitre option[value="' + valueI +'"]').attr('id');

        $.get( "/insertMa/" + idMa + "/" + idApp,
                function(result)
                {
                    $('#result').html(result);
                }
            );
    }
</script>
