{% extends 'base.html.twig' %}

{% block body %}
{{form_start(form)}}
	<div class="container-fluid">
		<div class="row bg-bar">
			<h3>Modification Information Maitre Apprentissage</h3>
		</div>
		<div class="row">
			<div class="col-6">
				{{ form_widget(form.email) }}
				{{ form_widget(form.nom) }}
				{{ form_widget(form.prenom) }}
				{{ form_widget(form.adresse) }}
				{{ form_widget(form.telephone) }}
				<a href="{{path('compte_modif_password')}}" class="btn btn-success  mt-3">Mofier mon mot de pass</a>
			</div>
		</div>
		<div class="row">
			<div class="col-12 mx-auto mt-3">
				{{ form_widget(form.save) }}
			</div>
		</div>
	</div>
{{form_end(form)}}
{% endblock %}
