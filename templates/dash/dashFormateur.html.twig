{% extends 'base.html.twig' %}
{% block myStylesheets %}
	<style>
		.colorTextNoir {
			color: black !important;
		}
		.clickable-row:hover {
			background-color: #f37262;
		}
		a {
			text-decoration: none;
		}
	</style>

{% endblock myStylesheets %}
{% block myJavascripts %}
	<script src="https://code.jquery.com/jquery-3.6.0.slim.js" integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY=" crossorigin="anonymous"></script>

	<script>

		jQuery(document).ready(function ($) {
$(".clickable-row").click(function () {
window.location = $(this).data("href");
});
});
	</script>
{% endblock myJavascripts %}

{% block body %}

	<div class="container-fluid bg-workSpace">
		{% if sessions %}
		{% for session in sessions %}
			
	
			<div class="row bg-bar">
				<div class="col-6 txt-normal">
					<h3>Session
						{{session.nom}}</h3>
				</div>
			</div>
			<div class="row text-center">
				<div class="col-6 txt-normal">
					Debut :
					{{session.debut|date("d/m/y")}}
				</div>
				<div class="col-6 txt-normal">
					Fin :
					{{session.fin|date("d/m/y")}}
				</div>
			</div>
			{% include 'listSession1.html.twig' %}
				{% endfor %}
		{% else %}
			<div class="row bg-bar">
				<div class="col-6 txt-normal">
					<h3>Aucune session en cours</h3>
				</div>
			</div>
		{% endif %}


		


		
		{% include 'dash/dashOFInclude.html.twig' %}
	



		
		{% set retour = 'dashFormateur' %}

	</div>

</div>{% endblock %}
