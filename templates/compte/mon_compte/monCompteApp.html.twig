{% extends 'base.html.twig' %}

{% block myStylesheets %}
	<style>
		ul li{
			color : white;
		}
	</style>
{% endblock myStylesheets %}

{% block body %}
	<div class="container-fluid">
		<div class="row bg-bar">
			<div class="col-6">
				<h3>Modification Information Apprenti</h3>
			</div>
		</div>
		{{form_start(form)}}
		<div class="row  mt-4">
			<div class="col-6">
				{{form_widget(form.prenom)}}
				{{form_widget(form.nom)}}
				{{form_widget(form.email)}}
				{{form_widget(form.adresse)}}
				{{form_widget(form.telephone)}}
				<p style="color: #fff">Sportif De Haut Niveau :</p>
				{{form_widget(form.SportifHautNiveau)}}
			</div>
			<div class="col-6">
				{{form_widget(form.RepresentantLegal1)}}
				{{form_widget(form.RepresentantLegal2)}}
				<p style="color: #fff">Travailleur Handicape :</p>
				{{form_widget(form.TravailleurHandicape)}}
				
			</div>
		</div>
		{% include 'buttonOK.html.twig' %}
		{{form_end(form)}} <div class="text-white"><h3>{{ notification }}</h3></div>

<hr class="text-white">

	{{form_start(formMDP)}}
		<div class="row bg-bar">
			<div class="col-6">
				<h3>Modification du Mot de passe</h3>
			</div>
		</div>
		
		
		<div class="row mt-4">
			<div class="col-6">
				{{ form_widget(formMDP.old_password) }}
				{{ form_widget(formMDP.new_password) }}
				<div class="mt-3">{{ form_widget(formMDP.save2) }}</div>
				
			</div>
		</div>
		</div> <div class="text-white"><h3>{{ notificationMDP }}</h3></div>
{{form_end(formMDP)}}
	</div>
{% endblock %}
