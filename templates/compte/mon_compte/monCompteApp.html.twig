{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-fluid">
		<div class="row bg-bar">
			<div class="col-6">
				<h3>Modification Information Apprenti</h3>
			</div>
		</div>
		{{form_start(form)}}
		<div class="row">
			<div class="col-6">
				{{form_widget(form.prenom)}}
				{{form_widget(form.nom)}}
				{{form_widget(form.email)}}
				{{form_widget(form.adresse)}}
				{{form_widget(form.telephone)}}
				<p style="color: #fff">Sportif De Haut Niveau :</p>
				{{form_widget(form.SportifHautNiveau)}}
			</div>
			<div class="col-6">
				{{form_widget(form.RepresentantLegal1)}}
				{{form_widget(form.RepresentantLegal2)}}
				<p style="color: #fff">Travailleur Handicape :</p>
				{{form_widget(form.TravailleurHandicape)}}
			</div>
		</div>
		{% include 'buttonOK.html.twig' %}
		{{form_end(form)}} <div class="text-white"><h3>{{ notification }}</h3></div>
	</div>
{% endblock %}
