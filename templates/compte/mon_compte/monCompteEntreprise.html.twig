{% extends 'base.html.twig' %}

{% block myStylesheets %}
	<style>
		ul li{
			color : white;
		}
	</style>
{% endblock myStylesheets %}


{% block body %}
	<div class="container-fluid">
		{{form_start(form)}}
		<div class="row">
			<div class="col-6">
				<h3>Modification Information Entreprise</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-6">
				{{ form_widget(form.nom) }}
				{{ form_widget(form.adresse) }}
				{{ form_widget(form.telephone) }}
				{{ form_widget(form.Effectif)}}
				
				</div>
		</div>
		{% include 'buttonOK.html.twig' %}
		{{form_end(form)}}
<div class="text-white"><h3>{{ notification }}</h3></div>

{{form_start(formMDP)}}
<div class="row bg-bar">
			<div class="col-6">
				<h3>Modification du Mot de passe</h3>
			</div>
		</div>
		

<hr class="text-white">

<div class="row">
			<div class="col-6">
				{{ form_widget(formMDP.old_password) }}
				{{ form_widget(formMDP.new_password) }}
				<div class="mt-3">{{ form_widget(formMDP.save2) }}</div>
				
			</div>
		</div>
		</div> <div class="text-white"><h3>{{ notificationMDP }}</h3></div>
{{form_end(formMDP)}}

	</div> 
{% endblock body %}
