{% extends 'lan/base.html.twig' %}

{% block body %}
	<div class="container-fluid">
		{{form_start(form)}}
		<div class="row bg-bar">
			<div class="col-6">
				<h3>Modifier mon mot de passe</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-6">
				{{ form_widget(form.email) }}<br>
				{{ form_widget(form.nom) }}
				{{ form_widget(form.prenom) }}
				{{form_start(form)}}
			</div>
			<div class="col-5">
				{{ form_widget(form.old_password) }}
				{{ form_widget(form.new_password) }}
			</div>
		</div>
		{% include 'buttonOK.html.twig' %}
		{{form_end(form)}}
		{% if notification %}
			<div class="alert alert-info">{{ notification }}</div>
		{% endif %}
	</div>
{% endblock body %}
