{% extends 'base.html.twig' %}

{% block myStylesheets %}
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
{% endblock %}

{% block title %}LIST DES FICHIERS{% endblock %}

{% block body %}
	<div class="container-fluid bg-workSpace">
			<!-- MAIN CARDS-->
				<div class="row">
					{% for message in app.flashes('message') %}
						<div class="alert alert-success">
							{{message}}
						</div>
					{% endfor %}
				</div>
				<div class="row bg-bar">
					<div class="col-12">
						<h2>Documents</h2>
					</div>
				</div>				
				<div class="row bg">
					<div class="col-12">
						<a href="{{ path( 'upload') }}">
							<button class="btn btn-success my-2">+ Ajouter un document</button>
						</a>
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<table class="table-normal">
							<thead>
								<tr>
									<th class="txt-bar bg-bar">Date</th>
									<th class="txt-bar bg-bar">Nom du document</th>
									<th class="txt-bar bg-bar">Session</th>
									<th class="txt-bar bg-bar">Destinataires</th>
									<th class="txt-bar bg-bar">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for document in listUp %}
									<tr>
										<td>{{document.dateCreate|date("d/m/y")}}</td>
										<td>{{document.titre}}</td>
										<td class="txt-normal">Alternance 1er Ann√©e</td>
										<td class="txt-normal">Tous</td>
										<td>
											<a href="{{ path( 'download',{'id':document.id} ) }}">
													<i class="fas fa-solid fa-download" style="font-size:20px;color:green;"></i>
											</a>
											
											<a href="{{ path( 'deletedocument',{'id':document.id} ) }}">
													<div style="font-size:20px;color:red; display:inline ;">&nbspX</div>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
