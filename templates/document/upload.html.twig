{% extends 'base.html.twig' %}
{% block myStylesheets %}
        <style>
        .myHidden 
        {
                height :1px;
        }
        </style>
{% endblock %}


{% block title %}UPLOAD FICHIER
{% endblock %}


{% block body %}
	<div class="container bg-workSpace fit50 pb-2">
		<div class="row bg-bar">
			<h2 class="col-12 ">Upload Document</h2>
		</div>
		{{ form_start(myForm) }}
		<div class="row align-middle">
			<div class="input-field col-6 my-auto">
				{{ form_widget(myForm.titre, {'attr': {'placeholder': 'Titre'}}) }}
			</div>
			<div class="input-field col-6 my-auto">
				{{ form_widget(myForm.fileName, {'attr': {'placeholder': 'message'}}) }}
			</div>
		</div>
	
		<div class="row mb-2">
			<div class="mx-auto col-6">
				<a href="{{ path( 'downloadlist') }}">
				        <div class="btn btn-danger" onclick="rtn()" alt="Retour">Retour</div>
				</a>
			</div>
			<div class="mx-auto col-6">
				<button class="btn btn-success" type="submit">Uploader</button>
			</div>
		</div>
	</div>
	{{ form_end(myForm) }}
</div>{% endblock %}
