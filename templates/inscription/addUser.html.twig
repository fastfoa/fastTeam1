{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
		<div class="row bg-bar">
			<h3>Inscription {{roleName}}</h3>
		</div>
		{{form_start(form)}}
			<div class="row">
					{{ form_widget(form.email) }}
			</div>
			<div class="row">
					{{ form_widget(form.save) }}
			</div>
		{{form_start(form)}}
			<div class="row">
					<div class="boutonForm col-3 my-2" onclick="selectAnnuaireR(  this, '{{ path('annuaire') }}', 'ROLE_APP' );">Annuaire</div>
			</div>

				{{form_end(form)}}
				{% if erreur != false %}
					<div class='alert alert-danger' role='alert'>
						{{erreur}}
					</div>
				{% endif %}
			</div>
		</div>
		<div class="row my-2">
		</div>
</div>
{% endblock body %}