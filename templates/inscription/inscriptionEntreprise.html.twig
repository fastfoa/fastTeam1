{% extends 'lan/base.html.twig' %}

{% block myStylesheets %}
	<style>
		h3{
			text-align:center;
		}
		input{
			display: block;
			position: relative;
			margin-left: auto;
			margin-right: auto;
			margin-top: 5px;
			width: 300px;
			height: 30px;
		}
		.btnTest{
			margin-top: 100px;
			text-align: center;
		}
	</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
{{form_start(form)}}
	<h3>Inscription Entreprise</h3>
	<div class="row">
		<div class="col-6">
			{{form_widget(form.nom)}}
			{{form_widget(form.siret)}}
			{{form_widget(form.adresse)}}
		</div>
		<div class="col-6">
			{{form_widget(form.email)}}
			{{form_widget(form.telephone)}}
		</div>
	</div>
{{form_end(form)}}
</div>
{% endblock %}
