{% extends 'base.html.twig' %}



{% block body %}
<div class="container-fluid">
		<div class="row bg-bar">
			<h3>Inscription Apprenti</h3>
		</div>
		{{form_start(form)}}
		<div class="row">
			<div class="col-6">
                    {{form_widget(form.prenom)}}
                    {{form_widget(form.nom)}}
                    {{form_widget(form.email)}}
                    {{form_widget(form.adresse)}}
                    {{form_widget(form.telephone)}}
                    {{form_widget(form.dateNaissance)}}
					{{form_widget(form.CommuneNaissance)}}
                    {{form_widget(form.Nationalite)}}
					<p style="color: #fff">Sportif De Haut Niveau :</p>
					{{form_widget(form.SportifHautNiveau)}}
                    {{form_widget(form.SituationAvantContrat)}}
					{{form_widget(form.DiplomePlusHaut)}}
			</div>
			<div class="col-6">
                    {{form_widget(form.diplome)}}
					<p style="color: #fff">Genre :</p>
                    {{form_widget(form.Genre)}}
                    {{form_widget(form.RepresentantLegal1)}}
                    {{form_widget(form.RepresentantLegal2)}}
                    {{form_widget(form.NIR)}}
                    {{form_widget(form.DepNaissance)}}
					{{form_widget(form.RegimeSocial)}}
					<p style="color: #fff">Travailleur Handicape :</p>
                    {{form_widget(form.TravailleurHandicape)}}
					{{form_widget(form.DernierDiplome)}}
                    {{form_widget(form.ConventionCollective)}}
                    {{form_widget(form.old_password)}}
                    {{form_widget(form.new_password)}}
					
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				{{ form_widget(form.save) }}
			</div>
		</div>
		{{form_end(form)}}
</div>
{% endblock %}



			
